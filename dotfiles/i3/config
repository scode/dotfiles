set $mod Mod4

### Modifictions/additions relative to the default generated by i3:

# xmonad style dynamic workspaces addressed by name.
# commented out for a while to see how i like it; I feel like I never use the selection aspect and always want exactly what I
# typed, and it's annoying when what I type is a prefix of something else and it matches the existing workspace
#bindsym $mod+apostrophe exec i3-msg workspace $(i3-msg -t get_workspaces | jq -r '.[].name' | dmenu -fn 'xft:DejaVu Sans Mono:size=15')
bindsym $mod+apostrophe exec i3-msg workspace $(dmenu -fn 'xft:DejaVu Sans Mono:size=15')

bindsym $mod+comma exec --no-startup-id /home/scode/git/randrman/run.sh

# move container to workspace by name
bindsym $mod+Shift+m exec i3-msg move container to workspace $(i3-msg -t get_workspaces | jq -r '.[].name' | dmenu -fn 'xft:DejaVu Sans Mono:size=15')

# https://github.com/lupoDharkael/flameshot
bindsym $mod+p exec flameshot gui

bindsym $mod+period exec i3lock -c 000000

# TODO: Don't hard code name of sink.
#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume alsa_output.usb-0a12_Avantree_Leaf-00.analog-stereo +3%
#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume alsa_output.usb-0a12_Avantree_Leaf-00.analog-stereo -3%
#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute alsa_output.usb-0a12_Avantree_Leaf-00.analog-stereo toggle

# bose35
#bindsym $mod+bracketright exec --no-startup-id pactl set-sink-volume bluez_sink.04_52_C7_31_FB_02.a2dp_sink +3%
#bindsym $mod+bracketleft exec --no-startup-id pactl set-sink-volume bluez_sink.04_52_C7_31_FB_02.a2dp_sink -3%

bindsym $mod+bracketright exec --no-startup-id pactl set-sink-volume alsa_output.usb-0a12_Avantree_Leaf-00.analog-stereo +1%
bindsym $mod+bracketleft exec --no-startup-id pactl set-sink-volume alsa_output.usb-0a12_Avantree_Leaf-00.analog-stereo -1%

bindsym XF86MonBrightnessUp exec --no-startup-id backlight.py +5%
bindsym XF86MonBrightnessDown exec --no-startup-id backlight.py -5%
bindsym $mod+x exec --no-startup-id backlight.py +5%
bindsym $mod+z exec --no-startup-id backlight.py -5%

# interactive prompt for an i3 command (i3-input didn't correctly do pango fonts)
bindsym $mod+i exec i3-msg $(dmenu -fn 'xft:DejaVu Sans Mono:size=15')

#bindsym $mod+v exec i3-sensible-terminal
bindsym $mod+v exec urxvt
bindsym $mod+Shift+c kill

# vim style bindings rather than the almost-vim default
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+n split h
bindsym $mod+m split v
bindsym $mod+Shift+d reload

# xps13:
#font pango:DejaVu Sans Mono 18

# t580:
font pango:DejaVu Sans Mono 10


### Mostly defaults follow:
floating_modifier $mod
bindsym $mod+d exec dmenu_run
